<script>
    let items = [];
    let totals = { sub: 0, tax: 0, grand: 0 };
    let invoiceReady = false;

    function initInvoice() {
        if (invoiceReady) return;
        const now = new Date();
        document.getElementById('billDate').innerText = now.toLocaleString('en-IN');
        document.getElementById('invNo').innerText = "AD-" + Date.now().toString().slice(-6);
        invoiceReady = true;
    }

    function addItem() {
        const desc = document.getElementById('itemDesc').value;
        const price = parseFloat(document.getElementById('itemPrice').value);
        const qty = parseInt(document.getElementById('itemQty').value);
        const taxRate = parseFloat(document.getElementById('itemTax').value);
        const name = document.getElementById('custName').value || "Customer";

        if(!desc || isNaN(price) || isNaN(qty)) return alert("Please fill all fields");

        initInvoice();
        
        const lineTotal = price * qty;
        const lineTax = (lineTotal * taxRate) / 100;

        items.push({ desc, qty, price, lineTotal, lineTax });
        
        document.getElementById('dispName').innerText = name;
        renderTable();
        
        // Reset Item Fields
        document.getElementById('itemDesc').value = '';
        document.getElementById('itemPrice').value = '';
        document.getElementById('itemQty').value = '1';
    }

    function renderTable() {
        const tbody = document.querySelector("#billTable tbody");
        tbody.innerHTML = "";
        
        totals = { sub: 0, tax: 0, grand: 0 };

        items.forEach(item => {
            totals.sub += item.lineTotal;
            totals.tax += item.lineTax;
            
            tbody.innerHTML += `
                <tr>
                    <td>${item.desc}</td>
                    <td>${item.qty}</td>
                    <td>${item.price.toFixed(2)}</td>
                    <td class="right">${item.lineTotal.toFixed(2)}</td>
                </tr>`;
        });

        totals.grand = totals.sub + totals.tax;

        document.getElementById('subTotal').innerText = totals.sub.toFixed(2);
        document.getElementById('taxTotalAmt').innerText = totals.tax.toFixed(2);
        document.getElementById('grandTotal').innerText = totals.grand.toFixed(2);
    }

    function downloadPDF() {
        const element = document.getElementById('invoice');
        html2pdf().from(element).save(`Amrut_Dresses_${document.getElementById('invNo').innerText}.pdf`);
    }

    function shareWhatsApp() {
        const phone = document.getElementById('custPhone').value;
        if(!phone) return alert("Enter Phone Number");

        const msg = `*AMRUT DRESSES INVOICE*\n------------------\n*Inv:* ${document.getElementById('invNo').innerText}\n*Total:* â‚¹${totals.grand.toFixed(2)}\n\nThank you for shopping!`;
        window.open(`https://wa.me/${phone}?text=${encodeURIComponent(msg)}`, '_blank');
    }
</script>

